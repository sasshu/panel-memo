{
  "manifest_version": 3,
  "name": "パネルメモ",
  "description": "Chromeのサイドパネルで編集できるメモ帳",
  "version": "1.0",
  "icons": {
    "16": "src/assets/memo-editing_16.png",
    "48": "src/assets/memo-editing_48.png",
    "128": "src/assets/memo-editing_128.png"
  },
  "permissions": ["sidePanel"],
  "action": {
    "default_title": "Click to open panel",
    "default_icon": "src/assets/memo-editing_48.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/service-worker.js"
  }
}
